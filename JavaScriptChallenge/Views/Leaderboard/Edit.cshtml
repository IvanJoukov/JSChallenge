                @Html.EditorFor(model => model.ExpectedSolution)
                @Html.ValidationMessageFor(model => model.ExpectedSolution)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartTime)
                @Html.ValidationMessageFor(model => model.StartTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SolveTime, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SolveTime)
                @Html.ValidationMessageFor(model => model.SolveTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SubmittedSolution, new { @class = "control-label col-md-2" })
